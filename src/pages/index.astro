---
import { getCollection } from 'astro:content'
import Hero from '../components/Hero.astro'
import ProjectGrid from '../components/ProjectGrid.astro'
import ServicesBigCards from '../components/ServicesBigCards.astro'
import BaseLayout from '../layouts/BaseLayout.astro'

const allProjects = await getCollection('projects')

const projectsWithCert = await getCollection('projects', ({ data }) => !!data.certificate)
const projectCount = projectsWithCert.length

const titleHtml = `Poradenstvo a certifikácia <br /> v oblasti BREEAM, LEED, Taxonómie&nbsp;EÚ, ESG a uhlíkovej&nbsp;neutrality`
const subtitleHtml = `Viac ako ${projectCount} vydaných certifikátov <br /> BREEAM a LEED na Slovensku, v Česku a Slovinsku`

const heroLinks = [
  { href: '/projects', label: 'Projekty' },
  { href: '/contact', label: 'Kontakt' }
]

const accreditationsTitle = 'Akreditácie'
const accreditations = [
  'LEED AP BD+C',
  'LEED Green Associate',
  'BREEAM International Assessor',
  'BREEAM AP',
  'BREEAM In Use Assessor',
  'WELL AP',
  'DGNB Certified Consultant',
  'Fitwel Ambassador',
  'Certified Passive House Designer & Consultant',
  'Autorizovaný stavebný inžinier — stavebná fyzika'
]

const services = [
  {
    title: 'BREEAM Certifikácia',
    desc: 'BREEAM je najstarší a najrozšírenejší certifikačný systém na svete, ktorý poskytuje prístup k pokročilému know-how v oblasti udržateľnosti budov.',
    href: '/services/breeam'
  },
  {
    title: 'BREEAM pre logistické haly',
    desc: 'SALVIS sa špecializuje na certifikáciu BREEAM pre logistické haly, s bohatými skúsenosťami z projektov s klientmi ako VGP, Panattoni a Contera.',
    href: '/services/breeam-pre-logisticke-haly'
  },
  {
    title: 'BREEAM In-Use',
    desc: 'PBREEAM In-Use poskytuje ucelený rámec na hodnotenie a zlepšenie prevádzkovej udržateľnosti komerčných nehnuteľností.',
    href: '/rozdiely-medzi-breeam-a-leed'
  },
  {
    title: 'LEED Certifikácia',
    desc: 'Medzinárodne oceňovaný certifikát udržateľnosti. Zvyšuje hodnotu nehnuteľností pri predaji a uľahčuje komunikáciu s investormi.',
    href: '/services/leed'
  },
  {
    title: 'LEED O+M',
    desc: 'Cieľom LEED O+M je systematicky zlepšovať environmentálny, energetický a prevádzkový výkon budov a zároveň znižovať ich prevádzkové náklady a uhlíkovú stopu.',
    href: '/services/leed-om'
  },
  {
    title: 'Taxonómia EÚ',
    desc: 'Taxonómia EÚ zavádza jednotný rámec pre určenie toho, čo je skutočne „udržateľná“ ekonomická aktivita.',
    href: '/services/taxonomia-eu'
  },
  {
    title: 'Dekarbonizácia budov',
    desc: 'Pomôžeme vám nastaviť jasnú a overiteľnú cestu k dekarbonizácii v súlade s Taxonómiou EÚ, ESG požiadavkami, SBTi a najlepšími svetovými štandardmi.',
    href: '/services/dekarbonizacia-existujucich-budov'
  },
  {
    title: 'Simulácie budov',
    desc: 'Simulácie budov umožňujú robiť kvalifikované rozhodnutia ešte pred realizáciou, čím šetria náklady, znižujú riziká a zvyšujú hodnotu investície.',
    href: '/services/simulacie-budov'
  },
  {
    title: 'EPD Deklarácie',
    desc: 'EPD (Environmental Product Declaration) je vyhlásenie, ktoré predstavuje jednotnú metodiku na hodnotenie a zverejňovanie environmentálnych dopadov stavebných produktov',
    href: '/services/epd'
  }
]
---

<BaseLayout>
  <Hero
    titleHtml={titleHtml}
    subtitleHtml={subtitleHtml}
    heroLinks={heroLinks}
    accreditationsTitle={accreditationsTitle}
    accreditations={accreditations}
  />
  <ServicesBigCards heading='Služby' services={services} cols={3} />
  <!-- <BentoGrid /> -->
  <!-- <Services /> -->
  <!-- <Projects title='Projekty' /> -->
  <ProjectGrid projects={allProjects} variant='all' title='Projekty' />
</BaseLayout>

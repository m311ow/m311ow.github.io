  <li class='nav-item border-bottom'>
    <a href='/spracovanie-certifikatu-epd' class={`nav-link rounded-0 ${currentPath === 'spracovanie-certifikatu-epd' ? 'active' : 'link-dark'}`}> EPD </a>
  </li>
  <li class='nav-item border-bottom'>
    <a href='/eu-taxonomia' class={`nav-link rounded-0 ${currentPath === 'eu-taxonomia' ? 'active' : 'link-dark'}`}> EÚ Taxonómia </a>

<style>
  #sidebar {
    top: 6.9rem;
  }
  .nav-link {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .nav-item {
    transition: background-color 0.25s ease;
  }
  .nav-item:hover {
    background-color: var(--bs-light);
  }
</style>

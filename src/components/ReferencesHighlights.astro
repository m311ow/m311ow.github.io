---
import { Image } from 'astro:assets';

interface Props {
  title?: string;
  descriptions?: string[];
  items: { src: ImageMetadata; alt: string; title: string; link?: string }[];
}

const { title = 'Výber referencií', descriptions, items } = Astro.props;
---

<div class='row justify-content-md-center py-3 py-md-5 py-xl-8'>
  <div class='col-lg-6'>
    <h2>{title}</h2>
    {descriptions && descriptions.map((text) => <p class='lead' set:html={text} />)}

    <p class='lead'></p>
  </div>
  <div class='col-lg-6'>
    <div class='row g-1'>
      {
        items.map((item) => (
          <div class='col-6'>
            <Image src={item.src} alt={item.alt} class='img-fluid h-100' />
          </div>
        ))
      }
    </div>
  </div>
</div>

---
interface HeroLink {
  href: string
  label: string
}

interface Props {
  titleHtml: string
  subtitleHtml: string
  heroLinks?: HeroLink[]
  accreditationsTitle?: string
  accreditations?: string[]
}

const {
  titleHtml,
  subtitleHtml,
  heroLinks = [],
  accreditationsTitle,
  accreditations = []
} = Astro.props
---

<div class='row border-bottom border-top pt-1'>
  <div class='col-md-6 d-flex flex-column'>
    <h1 class='fw-bold display-5' set:html={titleHtml} />
    <h3 class='text-primary fw-light' set:html={subtitleHtml} />

    {
      heroLinks.length > 0 && (
        <ul class='list-group list-group-flush w-50 w-lg-25'>
          {heroLinks.map((link) => (
            <li class='list-group-item p-0 border-primary'>
              <a
                href={link.href}
                class='d-flex justify-content-between align-items-center text-decoration-none py-1 w-100 h-100'
              >
                <span>{link.label}</span>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  width='16'
                  height='16'
                  fill='currentColor'
                  class='bi bi-arrow-right'
                  viewBox='0 0 16 16'
                  aria-hidden='true'
                >
                  <path
                    fill-rule='evenodd'
                    d='M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8'
                  />
                </svg>
              </a>
            </li>
          ))}
        </ul>
      )
    }
  </div>

  <div class='col-md-6 text-end d-flex flex-column justify-content-between'>
    {accreditationsTitle && <h3 class='text-end fw-light'>{accreditationsTitle}</h3>}
    {
      accreditations.length > 0 && (
        <ul class='list-unstyled fst-italic text-secondary pb-1 mb-0'>
          {accreditations.map((item) => (
            <li class='fw-light'>{item}</li>
          ))}
        </ul>
      )
    }
  </div>
</div>

<style>
  .list-group-item {
    transition: background-color 0.25s ease;
  }
  .list-group-item:hover {
    background-color: var(--bs-light);
  }
</style>
